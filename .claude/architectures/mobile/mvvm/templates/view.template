 * {{ViewName}} View
 *
 * MVVM Architecture - View layer
 * UI components that observe ViewModel
 *
 * @package views
 */

import React, { useEffect } from 'react';
import { View, Text, FlatList, ActivityIndicator, StyleSheet, TouchableOpacity } from 'react-native';
import { observer } from 'mobx-react-lite';
import { {{ViewModelName}}ViewModel } from '../viewmodels/{{ViewModelName}}ViewModel';

interface {{ViewName}}Props {
  viewModel: {{ViewModelName}}ViewModel;
}

// Observer pattern - automatically re-renders when ViewModel state changes
export const {{ViewName}} = observer(({ viewModel }: {{ViewName}}Props) => {
  // Load data on mount
  useEffect(() => {
    viewModel.loadData();

    return () => {
      viewModel.dispose(); // Cleanup
    };
  }, [viewModel]);

  // Render loading state
  if (viewModel.isLoading && !viewModel.hasData) {
    return (
      <View style={styles.centerContainer}>
        <ActivityIndicator size="large" color="#0000ff" />
        <Text style={styles.loadingText}>Loading...</Text>
      </View>
    );
  }

  // Render error state
  if (viewModel.error) {
    return (
      <View style={styles.centerContainer}>
        <Text style={styles.errorText}>Error: {viewModel.error}</Text>
        <TouchableOpacity
          style={styles.retryButton}
          onPress={() => viewModel.loadData()}
        >
          <Text style={styles.retryButtonText}>Retry</Text>
        </TouchableOpacity>
      </View>
    );
  }

  // Render empty state
  if (viewModel.isEmpty) {
    return (
      <View style={styles.centerContainer}>
        <Text style={styles.emptyText}>No data available</Text>
      </View>
    );
  }

  // Render data list
  return (
    <View style={styles.container}>
      <FlatList
        data={viewModel.data}
        keyExtractor={(item) => item.id}
        renderItem={({ item }) => (
          <TouchableOpacity
            style={styles.itemContainer}
            onPress={() => viewModel.selectItem(item.id)}
          >
            <Text style={styles.itemTitle}>{item.id}</Text>
            {/* Add more item details */}
          </TouchableOpacity>
        )}
        refreshing={viewModel.isLoading}
        onRefresh={() => viewModel.loadData()}
      />

      <TouchableOpacity
        style={styles.fab}
        onPress={() => {
          // Navigate to create screen
          viewModel.createItem({});
        }}
      >
        <Text style={styles.fabText}>+</Text>
      </TouchableOpacity>
    </View>
  );
});

