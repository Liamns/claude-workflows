{
  "name": "Layered Architecture",
  "type": "backend",
  "version": "1.0.0",
  "description": "Traditional n-tier architecture with clear layer separation",

  "structure": {
    "directories": {
      "presentation": "User interface and API endpoints",
      "business": "Business logic and rules",
      "data": "Data access and persistence",
      "common": "Shared utilities and cross-cutting concerns",
      "tests": "Test files for each layer"
    },
    "namingConventions": {
      "controller": "${Name}Controller",
      "service": "${Name}Service",
      "repository": "${Name}Repository",
      "model": "PascalCase",
      "dto": "${Name}DTO"
    },
    "fileExtensions": {
      "typescript": ["ts"],
      "javascript": ["js"],
      "python": ["py"],
      "java": ["java"],
      "csharp": ["cs"]
    }
  },

  "layers": {
    "presentation": {
      "description": "Handles HTTP requests and responses",
      "components": ["controllers", "validators", "mappers", "dtos"],
      "responsibilities": [
        "HTTP routing",
        "Request validation",
        "Response formatting",
        "Authentication/Authorization"
      ],
      "dependencies": ["business"]
    },
    "business": {
      "description": "Contains business logic",
      "components": ["services", "businessRules", "workflows"],
      "responsibilities": [
        "Business rule enforcement",
        "Transaction management",
        "Workflow orchestration",
        "Business validations"
      ],
      "dependencies": ["data"]
    },
    "data": {
      "description": "Manages data persistence",
      "components": ["repositories", "entities", "mappers"],
      "responsibilities": [
        "Database operations",
        "Data mapping",
        "Query optimization",
        "Caching"
      ],
      "dependencies": []
    },
    "common": {
      "description": "Cross-cutting concerns",
      "components": ["utilities", "exceptions", "constants", "configs"],
      "responsibilities": [
        "Logging",
        "Error handling",
        "Configuration",
        "Shared utilities"
      ],
      "dependencies": []
    }
  },

  "dependencies": {
    "allowed": {
      "presentation": ["business", "common"],
      "business": ["data", "common"],
      "data": ["common"],
      "common": []
    },
    "forbidden": {
      "data": ["business", "presentation"],
      "business": ["presentation"],
      "common": ["presentation", "business", "data"]
    },
    "circular": false
  },

  "qualityRules": {
    "layerIsolation": {
      "description": "Each layer should only depend on the layer below it",
      "severity": "error"
    },
    "singleResponsibility": {
      "description": "Each layer has a specific responsibility",
      "severity": "warning"
    },
    "dataAccessAbstraction": {
      "description": "Business layer should not know about database details",
      "severity": "error"
    }
  },

  "templates": {
    "controller": "architectures/backend/layered/templates/controller.template",
    "service": "architectures/backend/layered/templates/service.template",
    "repository": "architectures/backend/layered/templates/repository.template",
    "dto": "architectures/backend/layered/templates/dto.template"
  }
}