{
  "name": "Atomic Design",
  "type": "frontend",
  "version": "1.0.0",
  "description": "Component hierarchy methodology from atoms to pages",

  "structure": {
    "directories": {
      "components/atoms": "Basic building blocks (buttons, inputs, labels)",
      "components/molecules": "Simple combinations of atoms",
      "components/organisms": "Complex UI components",
      "templates": "Page-level templates without real content",
      "pages": "Specific instances of templates with real content",
      "styles": "Global styles and design tokens",
      "utils": "Utility functions and helpers"
    },
    "namingConventions": {
      "component": "PascalCase",
      "file": "PascalCase",
      "style": "kebab-case"
    },
    "fileExtensions": {
      "component": ["tsx", "jsx", "vue"],
      "style": ["css", "scss", "module.css"],
      "test": ["test.tsx", "spec.tsx"],
      "story": ["stories.tsx"]
    }
  },

  "levels": {
    "atoms": {
      "description": "Smallest functional components",
      "examples": ["Button", "Input", "Label", "Icon"],
      "rules": {
        "stateless": true,
        "pure": true,
        "noBusinessLogic": true
      }
    },
    "molecules": {
      "description": "Simple combinations of atoms",
      "examples": ["SearchBar", "FormField", "Card"],
      "rules": {
        "composedOfAtoms": true,
        "singleResponsibility": true
      }
    },
    "organisms": {
      "description": "Complex, standalone sections",
      "examples": ["Header", "Footer", "ProductGrid", "UserProfile"],
      "rules": {
        "selfContained": true,
        "reusable": true
      }
    },
    "templates": {
      "description": "Page-level component structure",
      "examples": ["BlogPostTemplate", "ProductPageTemplate"],
      "rules": {
        "noRealData": true,
        "layoutFocused": true
      }
    },
    "pages": {
      "description": "Specific instances with real content",
      "examples": ["HomePage", "AboutPage", "ProductDetailPage"],
      "rules": {
        "routeConnected": true,
        "dataFetching": true
      }
    }
  },

  "dependencies": {
    "allowed": {
      "pages": ["templates", "organisms", "molecules", "atoms"],
      "templates": ["organisms", "molecules", "atoms"],
      "organisms": ["molecules", "atoms"],
      "molecules": ["atoms"],
      "atoms": []
    },
    "forbidden": {
      "atoms": ["molecules", "organisms", "templates", "pages"],
      "molecules": ["organisms", "templates", "pages"],
      "organisms": ["templates", "pages"],
      "templates": ["pages"]
    },
    "circular": false
  },

  "qualityRules": {
    "atomPurity": {
      "description": "Atoms must be pure, stateless components",
      "severity": "error"
    },
    "singleResponsibility": {
      "description": "Each component should have one clear purpose",
      "severity": "warning"
    },
    "compositionOverInheritance": {
      "description": "Prefer composition over inheritance",
      "severity": "warning"
    }
  },

  "templates": {
    "atom": "architectures/frontend/atomic/templates/atom.template",
    "molecule": "architectures/frontend/atomic/templates/molecule.template",
    "organism": "architectures/frontend/atomic/templates/organism.template",
    "template": "architectures/frontend/atomic/templates/template.template",
    "page": "architectures/frontend/atomic/templates/page.template"
  }
}