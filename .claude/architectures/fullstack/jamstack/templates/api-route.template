  req: NextApiRequest,
  res: NextApiResponse<{{ApiName}}Response>
) {
  const { query } = req;

  // Fetch data from database, external API, etc.
  const data = await fetchData(query);

  return res.status(200).json({
    success: true,
    data
  });
}

