{
  "name": "Hexagonal Architecture",
  "type": "backend",
  "version": "1.0.0",
  "description": "Ports and Adapters pattern for maximum testability and flexibility",

  "structure": {
    "directories": {
      "core": "Core domain logic and ports",
      "core/domain": "Business entities and logic",
      "core/ports": "Input and output port interfaces",
      "adapters": "Implementation of ports",
      "adapters/inbound": "Driving adapters (controllers, CLI, etc.)",
      "adapters/outbound": "Driven adapters (repositories, clients, etc.)",
      "config": "Application configuration"
    },
    "namingConventions": {
      "port": "I${Name}Port",
      "adapter": "${Name}Adapter",
      "entity": "PascalCase",
      "service": "${Name}Service"
    },
    "fileExtensions": {
      "typescript": ["ts"],
      "javascript": ["js"],
      "python": ["py"],
      "java": ["java"],
      "go": ["go"]
    }
  },

  "hexagon": {
    "core": {
      "description": "The hexagon - pure business logic",
      "components": ["domain", "useCases", "ports"],
      "rules": {
        "noDependencies": true,
        "pureBusinessLogic": true,
        "definesPorts": true
      }
    },
    "ports": {
      "inbound": {
        "description": "Primary/Driving ports - triggered by actors",
        "examples": ["UserService", "OrderService", "PaymentService"],
        "implementedBy": "core"
      },
      "outbound": {
        "description": "Secondary/Driven ports - dependencies",
        "examples": ["UserRepository", "EmailService", "PaymentGateway"],
        "implementedBy": "adapters"
      }
    },
    "adapters": {
      "inbound": {
        "description": "Primary adapters - drive the application",
        "examples": ["RestController", "GraphQLResolver", "CLICommand", "MessageConsumer"],
        "implements": "inbound ports"
      },
      "outbound": {
        "description": "Secondary adapters - driven by the application",
        "examples": ["PostgresRepository", "RedisCache", "SMTPEmailService", "StripePaymentGateway"],
        "implements": "outbound ports"
      }
    }
  },

  "dependencies": {
    "allowed": {
      "adapters/inbound": ["core/ports", "core/domain"],
      "adapters/outbound": ["core/ports", "core/domain"],
      "core": [],
      "core/domain": [],
      "core/ports": ["core/domain"]
    },
    "forbidden": {
      "core": ["adapters"],
      "core/domain": ["adapters", "core/ports"],
      "core/ports": ["adapters"]
    },
    "circular": false
  },

  "qualityRules": {
    "portDefinition": {
      "description": "All external dependencies must be defined as ports",
      "severity": "error"
    },
    "adapterImplementation": {
      "description": "Adapters must implement port interfaces",
      "severity": "error"
    },
    "corePurity": {
      "description": "Core must not depend on any adapter or framework",
      "severity": "error"
    },
    "testability": {
      "description": "Core logic must be testable with mock adapters",
      "severity": "error"
    }
  },

  "testing": {
    "unit": {
      "scope": "core",
      "description": "Test business logic with mock ports"
    },
    "integration": {
      "scope": "adapters",
      "description": "Test adapter implementations"
    },
    "acceptance": {
      "scope": "full",
      "description": "End-to-end testing through inbound adapters"
    }
  },

  "templates": {
    "entity": "architectures/backend/hexagonal/templates/entity.template",
    "inboundPort": "architectures/backend/hexagonal/templates/inboundPort.template",
    "outboundPort": "architectures/backend/hexagonal/templates/outboundPort.template",
    "inboundAdapter": "architectures/backend/hexagonal/templates/inboundAdapter.template",
    "outboundAdapter": "architectures/backend/hexagonal/templates/outboundAdapter.template"
  }
}